<h1>Your url is shortened!</h1>

<section class="row">

  <div class="column">
    <h2>Your URL was:</h2>
    <p><%= link @short.url, to: @short.url %></p>
  </div>

  <div class="column">
    <h2>Your new URL is:</h2>
    <p><%= link Routes.page_url(@conn, :to_full_url, @short.hash_id), to: Routes.page_url(@conn, :to_full_url, @short.hash_id) %></p>
  </div>

</section>

<span><%= link "Back", to: Routes.short_path(@conn, :index) %></span>
