<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-row">
    <%= label f, :url, do: gettext "Your url here:" %>
    <%= text_input f, :url %>
    <%= error_tag f, :url %>

    <%= submit "Shorten!" %>
  </div>
<% end %>
